month = mar,
number = {3},
pages = {816--819},
pmid = {15711276},
title = {{Patients with penile carcinoma benefit from immediate resection of clinically occult lymph node metastases.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/15711276},
volume = {173},
year = {2005}
}
