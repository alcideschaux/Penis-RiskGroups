issn = {07244983},
journal = {World J. Urol.},
keywords = {Lymph node,Lymphoscintigraphy,Penile carcinoma,Sentinel node,Staging},
number = {3},
pages = {319--324},
pmid = {16688459},
shorttitle = {Lymphoscintigraphy in penile cancer},
title = {{Lymphoscintigraphy in penile cancer: Limited value of sentinel node biopsy in patients with clinically suspicious lymph nodes}},
